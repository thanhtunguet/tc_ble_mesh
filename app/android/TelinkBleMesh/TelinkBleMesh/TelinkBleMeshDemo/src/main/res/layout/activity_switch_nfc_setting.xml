<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_nfc"
            android:tint="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Please attach the device to the NFC sensing area of the phone"
            android:textSize="13sp"
            android:textStyle="italic|bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Data Rate: "
        android:textSize="12sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <RadioButton
            android:id="@+id/rb_data_rate_1m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="1 Mbit" />

        <RadioButton
            android:id="@+id/rb_data_rate_2m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2 Mbit" />
    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Advertising Interval: "
        android:textSize="12sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <RadioButton
            android:id="@+id/rb_adv_int_20ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="20 ms" />

        <RadioButton
            android:id="@+id/rb_adv_int_10ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10 ms" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Radio Channels: "
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TX Channel 1 : "
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_channel_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawableTint="@color/colorPrimary"
            android:focusable="false"
            android:gravity="center"
            android:inputType="none"
            android:paddingVertical="8dp"
            android:text="37"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="italic|bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TX Channel 2 : "
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_channel_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawableTint="@color/colorPrimary"
            android:focusable="false"
            android:gravity="center"
            android:inputType="none"
            android:paddingVertical="8dp"
            android:text="38"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="italic|bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TX Channel 3 : "
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_channel_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawableTint="@color/colorPrimary"
            android:focusable="false"
            android:gravity="center"
            android:inputType="none"
            android:paddingVertical="8dp"
            android:text="39"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="italic|bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Transmission Mode: "
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_comm_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_arrow_down"
        android:drawableTint="@color/colorPrimary"
        android:focusable="false"
        android:gravity="center"
        android:inputType="none"
        android:text="channel"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"
        android:textStyle="italic"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Optional Data( 0, 1, 2 or 4 byte(s) ): "
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <EditText
            android:id="@+id/et_opt_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:digits="@string/hex_input"
            android:text=""
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</LinearLayout>